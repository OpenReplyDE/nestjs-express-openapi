{
  "exclude": "node_modules/",
  "sourceMaps": "inline",
  "module": {
    "type": "nodenext"
  },
  "jsc": {
    "target": "esnext",
    "parser": {
      "syntax": "typescript",
      "topLevelAwait": true,
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    }
  }
}
